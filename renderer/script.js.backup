function showProcessSection() {
    processSection.style.display = 'block';
    processSection.classList.add('slide-up');
}

// Dosya i≈üleme fonksiyonu
async function processFile() {
    if (!selectedFilePath) {
        showError('L√ºtfen √∂nce bir dosya se√ßin.');
        return;
    }

    // Loading overlay g√∂ster
    showLoadingOverlay();
    
    try {
        // ƒ∞≈ülemi ba≈ülat
        const result = await ipcRenderer.invoke('process-pdks', selectedFilePath);
        
        // 1.5 saniye bekle (loading overlay sabit kalacak)
        await new Promise(resolve => setTimeout(resolve, 1500));
        
        // Loading overlay'i gizle
        hideLoadingOverlay();
        
        if (result.success) {
            showResults(result.data);
            outputPaths = {
                json: result.data.json_path,
                csv: result.data.csv_path
            };
            
            // Veri ge√ßmi≈üine ekle
            const filename = selectedFilePath ? path.basename(selectedFilePath) : 'Bilinmeyen Dosya';
            addToHistory(result.data, filename);
        } else {
            showError(result.message);
        }
    } catch (error) {
        hideLoadingOverlay();
        showError('ƒ∞≈ülem sƒ±rasƒ±nda hata olu≈ütu: ' + error.message);
    }
}

// Progress animasyonu
function animateProgress() {
    let progress = 0;
    const interval = setInterval(() => {
        progress += Math.random() * 15;
        if (progress > 90) progress = 90;
        
        progressFill.style.width = progress + '%';
        
        if (progress < 30) {
            progressText.textContent = 'Dosya okunuyor...';
        } else if (progress < 60) {
            progressText.textContent = 'Veriler i≈üleniyor...';
        } else if (progress < 90) {
            progressText.textContent = 'Raporlar olu≈üturuluyor...';
        }
    }, 200);
    
    // 3 saniye sonra animasyonu durdur
    setTimeout(() => {
        clearInterval(interval);
        progressFill.style.width = '100%';
        progressText.textContent = 'Tamamlandƒ±!';
    }, 3000);
}

