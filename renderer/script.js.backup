// Sayfa ge√ßi≈ü fonksiyonu
function switchPage(pageId) {
    // T√ºm sayfalarƒ± gizle
    document.querySelectorAll('.page').forEach(page => {
        page.classList.remove('active');
    });
    
    // T√ºm nav itemlarƒ± pasif yap
    document.querySelectorAll('.nav-item').forEach(item => {
        item.classList.remove('active');
    });
    
    // Se√ßili sayfayƒ± g√∂ster
    const targetPage = document.getElementById(pageId + '-page');
    if (targetPage) {
        targetPage.classList.add('active');
    }
    
    // Se√ßili nav item'ƒ± aktif yap
    const activeNavItem = document.querySelector(`[data-page="${pageId}"]`);
    if (activeNavItem) {
        activeNavItem.classList.add('active');
    }
    
    // Personel sayfasƒ±na ge√ßildiƒüinde filtreleri kur
    if (pageId === 'personel') {
        setupFilterListeners();
    }
    
    // Vardiya sayfasƒ±na ge√ßildiƒüinde analizi g√ºncelle
    if (pageId === 'vardiya') {
        updateVardiyaAnalysis();
    }
    
    // Vardiya analizi sayfasƒ±na ge√ßildiƒüinde analizi y√ºkle
    if (pageId === 'vardiya-analiz') {
        loadVardiyaAnalizi();
    }
    
    // Ge√ßmi≈ü sayfasƒ±na ge√ßildiƒüinde ge√ßmi≈üi g√ºncelle ve otomatik yenilemeyi ba≈ülat
    if (pageId === 'gecmis') {
        updateHistoryList();
        startHistoryAutoRefresh();
    } else {
        // Diƒüer sayfalara ge√ßildiƒüinde otomatik yenilemeyi durdur
        stopHistoryAutoRefresh();
    }
    
    // Ayarlar sayfasƒ±na ge√ßildiƒüinde ayarlarƒ± y√ºkle
    if (pageId === 'ayarlar') {
        loadSettings();
    }
}

